<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/message" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/annonce_list_view" app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintVertical_bias="0.176">
    </android.support.v7.widget.RecyclerView>
    <android.support.constraint.ConstraintLayout
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="285dp" android:id="@+id/profile_view">
        <TextView
                android:text="Nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/compte_nom"
                android:layout_marginTop="156dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.311"/>
        <TextView
                android:text="prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/compte_prenom"
                android:layout_marginTop="192dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.34"/>
        <TextView
                android:text="e_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/compte_e_mail"
                android:layout_marginTop="232dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.335"/>
        <TextView
                android:text="Wilayas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/compte_wilayas"
                android:layout_marginTop="372dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.092"/>
        <ImageView
                android:layout_width="133dp"
                android:layout_height="133dp" app:srcCompat="@android:color/holo_blue_bright"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
                android:layout_marginTop="140dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>