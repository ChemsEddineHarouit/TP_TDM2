<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="matricule"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/row_wilaya_matricule" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="nom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/row_wilaya_name" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/row_wilaya_matricule"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toStartOf="@+id/row_wilaya_check"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:onClick="wilayaChecked"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/row_wilaya_check"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>